<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<!-- Mybatis的主配置文件 -->
<configuration>
    <!-- 配置别名 -->
    <typeAliases>
        <package name="com.lee.bean" />
    </typeAliases>

    <!-- 配置映射器 -->
    <mappers>
        <!-- 将包内的映射器接口实现全部注册为映射器 -->
        <package name="com.lee.dao" />
    </mappers>
</configuration>